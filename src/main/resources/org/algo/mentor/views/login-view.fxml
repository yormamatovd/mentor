<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Circle?>

<StackPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.algo.mentor.controllers.LoginController"
           style="-fx-background-color: #f8f9fc;">
    
    <VBox alignment="CENTER">
        <VBox fx:id="loginCard" alignment="TOP_CENTER" spacing="30.0" maxWidth="420.0" 
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 20, 0, 0, 10); -fx-border-color: #edf2f7; -fx-border-radius: 15; -fx-border-width: 1;">
            <padding>
                <Insets bottom="60.0" left="50.0" right="50.0" top="60.0"/>
            </padding>

            <VBox alignment="CENTER" spacing="8.0">
                <Label text="Mentor" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #2d3748; -fx-letter-spacing: 1;"/>
                <Label text="Tizimga kirish" style="-fx-font-size: 14; -fx-text-fill: #718096;"/>
            </VBox>

            <VBox spacing="15.0">
                <VBox spacing="6.0">
                    <Label text="Ma'lumotlar bazasi papkasi" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <TextField fx:id="dbPathField" editable="false" promptText="Papkani tanlang" HBox.hgrow="ALWAYS"
                                   style="-fx-background-radius: 8; -fx-padding: 12; -fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 8;"/>
                        <Button text="Tanlash" onAction="#onSelectFolderButtonClick"
                                style="-fx-background-color: #edf2f7; -fx-text-fill: #4a5568; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12; -fx-cursor: hand;"/>
                    </HBox>
                    <Label fx:id="dbStatusLabel" text="Bazani tanlang" style="-fx-font-size: 11; -fx-text-fill: #718096;"/>
                </VBox>

                <VBox spacing="6.0">
                    <Label text="Login" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
                    <TextField fx:id="usernameField" promptText="Loginni kiriting" styleClass="login-input"
                               style="-fx-background-radius: 8; -fx-padding: 12; -fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 8;"/>
                </VBox>

                <VBox spacing="6.0">
                    <Label text="Parol" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
                    <PasswordField fx:id="passwordField" promptText="Parolni kiriting" onAction="#onLoginButtonClick" styleClass="login-input"
                                   style="-fx-background-radius: 8; -fx-padding: 12; -fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 8;"/>
                </VBox>
            </VBox>

            <Button fx:id="loginButton" text="Kirish" onAction="#onLoginButtonClick" prefWidth="Infinity"
                    style="-fx-background-color: #3182ce; -fx-text-fill: white; -fx-font-size: 15; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12; -fx-cursor: hand;"/>
            
            <Label fx:id="errorLabel" text="Login yoki parol noto'g'ri!" visible="false" managed="false" 
                   style="-fx-text-fill: #e53e3e; -fx-font-weight: bold; -fx-font-size: 12;"/>
        </VBox>
    </VBox>
</StackPane>
